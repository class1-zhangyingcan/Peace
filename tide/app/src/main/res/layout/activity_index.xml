<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@drawable/calendar_background1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/index_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/index_sentence"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="信念是鸟，它在黎明仍然黑暗之际，感觉到了光明。"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/index_person"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/index_person" />
        </LinearLayout>

        <Button
            android:id="@+id/index_start"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/bt_shape"
            android:text="▶  开始专注"
            android:textColor="#607B8B"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="60dp"
            android:background="#708090" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/index_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="专注"
                    android:textColor="#a6ffff"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/index_img2"
                    android:layout_width="135dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="睡眠"
                    android:textColor="#a6ffff"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/index_img3"
                    android:layout_width="135dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="放松"
                    android:textColor="#a6ffff"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/index_img4"
                    android:layout_width="135dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="35dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="呼吸"
                    android:textColor="#a6ffff"
                    android:textSize="20dp" />
            </RelativeLayout>


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>